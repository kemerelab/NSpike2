	    dspchan		98
	    refelect		8
	    refchan		0
	    number		5
	    electchan		0
	    depth 		0
	    thresh 		40
	    maxdispval		1000
	    filter 		1	400
	    color		0

    channel 	5
	    dspnum		1
	    dspchan		114
	    refelect		8
	    refchan		0
	    number		6
	    electchan		0
	    depth 		0
	    thresh 		40
	    maxdispval		1000
	    filter 		1	400
	    color		0

    channel 	6
	    dspnum		1
	    dspchan		99
	    refelect		8
	    refchan		0
	    number		7
	    electchan		0
	    depth 		0
	    thresh 		40
	    maxdispval		1000
	    filter 		1	400
	    color		0


% Now come the channels of the data tetrodes
hostname minime

